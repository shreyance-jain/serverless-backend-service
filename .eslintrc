{
  "root": true,
  "extends": "airbnb-base",
  "parserOptions": {
    "sourceType": "script"
  },
  "env": {
    "es6": true,
    "jest": true,
    "node": true
  },
  "rules": {
    "comma-dangle": ["error", {
      "arrays": "always-multiline",
      "exports": "always-multiline",
      "functions": "never",
      "imports": "always-multiline",
      "objects": "always-multiline"
    }],
    "no-console": [
      "warn", {
        "allow": [
          "error",
          "warn"
        ]
      }
    ],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}]
  },
  "overrides": [
    {
      "files": [""],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
